{
  "manifest_version": 3,
  "name": "ClickToCallBeta",
  "version": "0.4.8",
  "description": "Identifica números de teléfono, permite llamar vía API y enviar WhatsApp.",
  "Author": "Alicia Caparros",
  "icons": {
    "16": "icons/phone_icon16.png",
    "48": "icons/phone_icon48.png",
    "128": "icons/phone_icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/phone_icon16.png",
      "32": "icons/phone_icon32.png"
    },
    "default_title": "ClickToCallBeta",
    "default_popup": "formulario.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "icons_DialPad/*",
        "icons_modal/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}